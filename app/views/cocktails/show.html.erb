<div class="small-container">

<div class="cocktail_card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
<%= @cocktail.name %>
</div>

<% @cocktail.doses.each do |dose| %>
   <li><%= dose.description %> <%= dose.ingredient.name %></li>
<% end %>

<%= link_to "add doses", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back", cocktails_path %>
<%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure ?' } do %>
  <i class="fas fa-trash" style="font-size: 20px;"></i>
  <% end %>

</div>